<% include ./partials/header %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Client Login</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="account" placeholder="account number">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" value="Login!">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

